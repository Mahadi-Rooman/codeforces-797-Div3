    using namespace std;
    int main()
    {
       anika_a78;
       int tc;
       cin>>tc;
       while(tc--)
       {
       	   ll n;
       	   cin>>n;
       	   ll x=n/3;
       	   ll y=n%3;
       	   ll a,b,c;
       	   if(y==2)
       	   a=x+1,b=x+2,c=x-1;
       	   else if(y==1)
       	    a=x,b=x+2,c=x-1;
       	    else
       	    a=x,b=x+1,c=x-1;
       	    
       	    
       	    cout<<a<<" "<<b<<" "<<c<<endl;
       }
    }
     
